{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
	"files": { "ignoreUnknown": false },
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 150,
		"attributePosition": "auto",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"expand": "auto",
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"complexity": {
				"noAdjacentSpacesInRegex": "warn",
				"noArguments": "warn",
				"noBannedTypes": "error",
				"noExtraBooleanCast": "off",
				"noImplicitCoercions": "error",
				"noStaticOnlyClass": "error",
				"noUselessConstructor": "error",
				"noUselessEscapeInRegex": "off",
				"noUselessLabel": "warn",
				"noUselessLoneBlockStatements": "off",
				"noUselessRename": "error",
				"noUselessStringConcat": "warn",
				"noUselessTernary": "off",
				"noUselessTypeConstraint": "error",
				"noUselessUndefinedInitialization": "off",
				"noVoid": "off",
				"useLiteralKeys": "error",
				"useNumericLiterals": "off"
			},
			"correctness": {
				"noConstAssign": "error",
				"noConstantCondition": "off",
				"noEmptyCharacterClassInRegex": "error",
				"noEmptyPattern": "off",
				"noGlobalObjectCalls": "warn",
				"noInnerDeclarations": "off",
				"noInvalidConstructorSuper": "off",
				"noInvalidUseBeforeDeclaration": "off",
				"noPrecisionLoss": "error",
				"noSelfAssign": "error",
				"noSetterReturn": "warn",
				"noSwitchDeclarations": "error",
				"noUndeclaredVariables": "off",
				"noUnreachable": "warn",
				"noUnreachableSuper": "error",
				"noUnsafeFinally": "warn",
				"noUnusedLabels": "error",
				"noUnusedVariables": "off",
				"useIsNan": "error",
				"useParseIntRadix": "error",
				"useValidForDirection": "off",
				"useValidTypeof": "error",
				"useYield": "warn"
			},
			"performance": { "noAwaitInLoops": "off" },
			"security": { "noGlobalEval": "warn" },
			"style": {
				"noNamespace": "off",
				"noNegationElse": "warn",
				"noNestedTernary": "off",
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"noRestrictedGlobals": { "level": "off", "options": {} },
				"noRestrictedImports": "off",
				"noYodaExpression": "error",
				"useArrayLiterals": "error",
				"useAsConstAssertion": "error",
				"useBlockStatements": "off",
				"useCollapsedElseIf": "error",
				"useConsistentArrayType": "off",
				"useConsistentBuiltinInstantiation": "warn",
				"useConst": "error",
				"useDefaultParameterLast": "error",
				"useDefaultSwitchClause": "off",
				"useForOf": "error",
				"useLiteralEnumMembers": "off",
				"useShorthandAssign": "error",
				"useSingleVarDeclarator": "error",
				"useSymbolDescription": "warn",
				"useTemplate": "warn",
				"useUnifiedTypeSignatures": "error"
			},
			"suspicious": {
				"noAlert": "error",
				"noBitwiseOperators": "off",
				"noCatchAssign": "off",
				"noClassAssign": "warn",
				"noCompareNegZero": "error",
				"noConfusingVoidType": "error",
				"noConsole": "off",
				"noControlCharactersInRegex": "off",
				"noDebugger": "error",
				"noDoubleEquals": "error",
				"noDuplicateCase": "error",
				"noDuplicateClassMembers": "error",
				"noDuplicateObjectKeys": "error",
				"noDuplicateParameters": "error",
				"noEmptyBlockStatements": "off",
				"noExplicitAny": "off",
				"noExtraNonNullAssertion": "error",
				"noFallthroughSwitchClause": "off",
				"noFunctionAssign": "off",
				"noGlobalAssign": "off",
				"noImportAssign": "warn",
				"noIrregularWhitespace": "error",
				"noLabelVar": "error",
				"noMisleadingInstantiator": "error",
				"noOctalEscape": "error",
				"noPrototypeBuiltins": "off",
				"noRedeclare": "off",
				"noSelfCompare": "warn",
				"noShadowRestrictedNames": "error",
				"noSparseArray": "warn",
				"noTemplateCurlyInString": "error",
				"noUnsafeDeclarationMerging": "off",
				"noUnsafeNegation": "error",
				"noVar": "error",
				"noWith": "error",
				"useAdjacentOverloadSignatures": "error",
				"useAwait": "error",
				"useGuardForIn": "warn",
				"useIterableCallbackReturn": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "none",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"quoteStyle": "single",
			"attributePosition": "auto",
			"bracketSpacing": true
		}
	},
	"html": { "formatter": { "selfCloseVoidElements": "always" } },
	"overrides": [
		{
			"includes": ["*.yml"],
			"formatter": { "indentStyle": "space", "indentWidth": 2 }
		},
		{
			"includes": ["README.md"],
			"formatter": {
				"indentStyle": "space",
				"indentWidth": 2,
				"lineWidth": 120
			}
		}
	],
	"assist": {
		"enabled": true,
		"actions": { "source": { "organizeImports": "on" } }
	}
}
